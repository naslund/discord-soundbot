{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "outDir": "dist",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["node", "jest"],
    "strict": true
  },
  "include": ["src/**/*", "bin/**/*"],

  "exclude": ["**/__test__", "**/__mocks__"]
}
